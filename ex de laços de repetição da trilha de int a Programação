# imprimindo os andares usando o laço for em ordem decrescente
i = 20
for i in range (20, 0, -1): 
  if (i== 13):
    continue
  print (i,"° andar")


# imprimindo os andares usando o laço for em ordem crescente
i = 20
for i in range (1,21,1):
  if (i==13): 
    continue
  print (i,"° andar")


# imprimindo os andares usando o laço while em ordem crescente
andar = 1
while andar <= 20:
    if andar == 13:
        andar += 1  # Pula o 13º andar
        continue
    print(f"Andar {andar}")
    andar += 1
